<h1>Welcome to the Tutor Portal</h1>

<% if tutor_signed_in? %>
  <%= link_to 'Edit profile', edit_tutor_registration_path %>
  <%= link_to "Sign out", destroy_tutor_session_path, data: { turbo_method: :delete } %><br>
  <%= link_to 'Create a new course', new_course_path %>
  <h1>Your Courses</h1>

<% @courses.each do |course| %>
  <div>
    <h2><%= course.title %></h2>
    <p><strong>Technologies:</strong> <%= course.technologies %></p>
    <p><strong>Duration:</strong> <%= course.duration %> minutes</p>
    <p><strong>Table of Contents:</strong></p>
    <p><%= course.table_of_contents %></p>
    <p><strong>Price:</strong> <%= number_to_currency(course.price) %></p>
  </div>
  <hr>
<% end %>
<% else %>
  <%= link_to 'Log in', new_tutor_session_path %>
  <%= link_to 'Sign up', new_tutor_registration_path %>
<% end %>
