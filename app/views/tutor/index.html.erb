<h1>Welcome to the Tutor Portal</h1>

<% if tutor_signed_in? %>
  <%= link_to 'Edit profile', edit_tutor_registration_path %>
  <%= link_to "Sign out", destroy_tutor_session_path, data: { turbo_method: :delete } %><br>
  <%= link_to 'Create a new course', new_course_path %>
  <h1>Your Courses</h1>

  

<% @courses.each do |course| %>
  <div>
    <h2><%= course.title %></h2>

    <div>
      <strong>Technologies:</strong>
      <%= course.technologies %>
    </div>

    <div>
    <strong>Duration:</strong>
     <%= @course.formatted_duration %>
    </div>

    <div>
      <strong>Table of Contents:</strong>
      <%= course.table_of_contents %>
    </div>

    <div>
    <strong>Free or Paid:</strong>
    <%= course.free_or_paid.present? ? course.free_or_paid.capitalize : "Not specified" %>
  </div>

  <% if course.free_or_paid == "paid" %>
  <div>
    <strong>Price:</strong>
    <%= number_to_currency(course.price, unit: "â‚¹") %>
  </div>
<% end %>

  </div>
<% end %>

  
  
<% else %>
  <%= link_to 'Log in', new_tutor_session_path %>
  <%= link_to 'Sign up', new_tutor_registration_path %>
<% end %>
